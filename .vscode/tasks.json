{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build and Run C++ (input/output)",
      "type": "shell",
      "command": "cmd",
      "args": [
        "/c",
        "g++ -std=c++17 -O2 -Wall \"${file}\" -o \"${fileBasenameNoExtension}.exe\" && \"${fileBasenameNoExtension}.exe\" < input.txt > output.txt"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    }
  ]
}
